{{#if errorMessage }}
    <div class="row" id="errorinfo">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="alert alert-danger" role="alert">
                {{errorMessage}}
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
{{/if}}

{{#if isSuccess }}
    <div class="row" id="errorinfo">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="alert alert-success" role="alert">
                You have submitted the value successfully!!
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
{{/if}}

